{
  "name": "pro-backup",
  "author": {
    "name": "Bikiran",
    "email": "info@bikiran.com"
  },
  "description": "This APP is built by Bikiran",
  "version": "1.1.24",
  "private": true,
  "homepage": "./",
  "main": "src/main.js",
  "publisher": "Bikiran",
  "license": "CC0-1.0",
  "scripts": {
    "start": "electron  --trace-warnings .",
    "electron": "electron  --trace-warnings .",
    "electron:start": "electron-forge start",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make",
    "build": "electron-builder",
    "build:windows": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "build:mac:local": "electron-builder --mac --publish=never",
    "build:mac:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --publish=never",
    "build:forge": "electron-forge make",
    "build:forge:mac": "electron-forge make --platform=darwin",
    "build:forge:win": "electron-forge make --platform=win32",
    "build:forge:linux": "electron-forge make --platform=linux",
    "publish": "electron-builder --publish=always",
    "publish:windows": "electron-builder --win --publish=always",
    "publish:mac": "electron-builder --mac --publish=always",
    "publish:linux": "electron-builder --linux --publish=always",
    "publish:all": "electron-builder --win --mac --linux --publish=always",
    "release:prepare": "./scripts/prepare-release.sh",
    "release:check": "yarn build:all --dry-run",
    "release:verify": "./scripts/verify-build.sh",
    "release:unsigned": "./scripts/build-unsigned.sh",
    "version:check": "node -p \"require('./package.json').version\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/its-yeasin/7160EL-Pro-Backup"
  },
  "build": {
    "productName": "Pro Backup",
    "appId": "com.bikiran.probackup",
    "publish": {
      "provider": "github",
      "owner": "its-yeasin",
      "repo": "7160EL-Pro-Backup"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "highestAvailable",
      "icon": "./src/assets/backup-pro-logo.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "./src/assets/backup-pro-logo.png",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./src/assets/backup-pro-logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pro Backup",
      "installerIcon": "./src/assets/backup-pro-logo.png",
      "uninstallerIcon": "./src/assets/backup-pro-logo.png",
      "installerHeaderIcon": "./src/assets/backup-pro-logo.png",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Productivity"
    },
    "dmg": {
      "title": "Pro Backup ${version}",
      "icon": "./src/assets/backup-pro-logo.png",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "extraResources": [
      {
        "from": ".env",
        "to": "./.env",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build",
        "to": "./build",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "Data",
        "to": "./Data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "Logs",
        "to": "./Logs",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@google-cloud/storage": "^7.11.2",
    "cron-parser": "^4.9.0",
    "dotenv": "^17.2.0",
    "electron-log": "^5.4.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "firebase": "^12.0.0",
    "moment": "^2.30.1",
    "mssql": "^11.0.1",
    "ncp": "^2.0.0",
    "nodemailer": "^7.0.5",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "pouchdb": "^9.0.0",
    "progress-stream": "^2.0.0",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/publisher-github": "^7.8.1",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "25.0.0-alpha.6",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5"
  }
}
